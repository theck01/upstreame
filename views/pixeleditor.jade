    #trash-confirmation-menu.confirmation-menu
      .confirmation-message Are you sure you want to clear the canvas?
      .confirmation-menu-spacer
      .confirmation-select-submenu
        button#trash-confirm-yes.dk-button.confirmation-button Yes
        .confirmation-select-spacer
        button#trash-confirm-no.dk-button.confirmation-button No

    #save-sprite-menu.save-menu
      .save-message Save visible area as...
      .save-menu-spacer
      label.save-label
        input.save-type-input(type="radio" name="save-type" value="json" checked)
        | Editable JSON Sprite
      label.save-label
        input.save-type-input(type="radio" name="save-type" value="img")
        | PNG Image Sprite
      .save-menu-spacer
      .save-action-submenu
        .save-action-spacer
        button#save-sprite-button.dk-button.save-action-button Save Sprite
      
    #settings-menu.settings-menu
      .settings-row
        .settings-label Canvas Width
        input#canvas-width-input.settings-dimension-input(type="text")
      .settings-spacer
      .settings-row
        .settings-label Canvas Height
        input#canvas-height-input.settings-dimension-input(type="text")
      .settings-spacer
      label.settings-row
        .settings-label Show Grid
        input#grid-display-input.settings-grid-display-input(type="checkbox" checked)
